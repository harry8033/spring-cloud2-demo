<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pf.code.dao.TemplateDao" >
	<resultMap id="BaseResultMap" type="com.pf.code.entity.Template">
		<result column="id" property="id" jdbcType="INTEGER"/>
		<result column="name" property="name" jdbcType="VARCHAR"/>
		<result column="filename" property="filename" jdbcType="VARCHAR"/>
		<result column="filepath" property="filepath" jdbcType="VARCHAR"/>
		<result column="files" property="files" jdbcType="TEXT"/>
		<result column="ctime" property="ctime" jdbcType="DATETIME"/>
	</resultMap>
	
	<sql id="Base_Column_List">
	t.id,t.name,t.filename,t.filepath,t.files,t.ctime
	</sql>
	
	<sql id="Example_Where_Clause" >
		<trim prefix="where" prefixOverrides="and|or" >
			<if test="id != null and id != ''" >
	         	and t.id = #{id}
			</if>
			<if test="name != null and name != ''" >
	         	and t.name = #{name}
			</if>
			<if test="filename != null and filename != ''" >
	         	and t.filename = #{filename}
			</if>
			<if test="filepath != null and filepath != ''" >
	         	and t.filepath = #{filepath}
			</if>
			<if test="files != null and files != ''" >
	         	and t.files = #{files}
			</if>
			<if test="ctime != null and ctime != ''" >
	         	and t.ctime = #{ctime}
			</if>
		</trim>
	</sql>
	
	<select id="findBy" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"/>
		from t_template t 
	    <include refid="Example_Where_Clause" />
	    <include refid="common.Pagination_Tail" />
	</select>
	
	<select id="findById" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"/>
		from t_template t 
	    where id=#{value}
	</select>
	
	<select id="getCount" resultType="java.lang.Long">
		select count(1)
		from t_template t 
	    <include refid="Example_Where_Clause" />
	</select>
	
	<insert id="addEntity">
		insert into t_template
		(id,name,filename,filepath,files,ctime) 
		values
		(#{id},#{name,jdbcType=VARCHAR},#{filename,jdbcType=VARCHAR},#{filepath,jdbcType=VARCHAR},#{files,jdbcType=TEXT},#{ctime,jdbcType=DATETIME})
	</insert>
	
	<update id="updateEntity">
		update t_template  
		<trim prefix="set" prefixOverrides="," >
			<if test="name != null and name != ''" >
	         	,name = #{name}
			</if>
			<if test="filename != null and filename != ''" >
	         	,filename = #{filename}
			</if>
			<if test="filepath != null and filepath != ''" >
	         	,filepath = #{filepath}
			</if>
			<if test="files != null and files != ''" >
	         	,files = #{files}
			</if>
			<if test="ctime != null and ctime != ''" >
	         	,ctime = #{ctime}
			</if>
		</trim>
		where id=#{id}
	</update>
	
	<delete id="deleteById">
		delete from t_template where id=#{value}
	</delete>
</mapper>

